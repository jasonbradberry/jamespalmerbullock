---
import siteConfig from '../data/site-config';
import Nav from './Nav.astro';
---

<header class="flex w-full max-w-3xl mx-auto min-h-10 pt-4 pb-12 relative sm:min-h-14 sm:pb-24 md:pt-8">
    <a href="#main-content" class="button skip-link" data-button-variant="skip-link" data-button-theme="default">Skip to content</a>

    {
        siteConfig.logo && siteConfig.logo?.src ? (
            <a href="/jamespalmerbullock" title="Home">
                <img src={siteConfig.logo.src} alt={siteConfig.logo.alt || ''} class="max-h-12" />
            </a>
        ) : (
            <a class="font-serif text-2xl leading-tight font-medium text-theme-foreground sm:text-4xl visually-hidden" href="/" title="Home">
                {siteConfig.title}
            </a>
        )
    }
    <!-- {siteConfig.subtitle && <p class="text-sm leading-tight mt-1">{siteConfig.subtitle}</p>} -->

    <Nav />
</header>
